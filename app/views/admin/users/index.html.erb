<h1>Rotten Mangoes</h1>
<h2>Admin page</h2>
<%= link_to "Create new user", new_admin_user_path, method: :get %>

<table>
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
    </tr>
  </thead>
<% @users.each do |user|%>
  <tbody>
    <tr>
      <td><%= user.full_name %></td>
      <td><%= user.email%></td>
      <td>
        (<%= link_to "Edit User", edit_admin_user_path(user), method: :get %> | <%= link_to "Destroy", admin_user_path(user), method: :delete, data: {confirm: 'Are you sure?'} %>)
        </td>
    </tr>
  </tbody>
<% end %>
</table>

<%= paginate @users %>
